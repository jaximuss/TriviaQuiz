<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaQuiz.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Trivia Quiz" FontSize="24" HorizontalOptions="Center" Margin="0, 40, 0, 20" />
        <Label x:Name="QuestionLabel" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="20" />
        <StackLayout x:Name="OptionsStackLayout" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <!-- Add four buttons for the options -->
            <Button x:Name="Option1Button" Text="{Binding Options[0]}" Clicked="OptionButton_Clicked" Margin="10"/>
            <Button x:Name="Option2Button" Text="{Binding Options[1]}" Clicked="OptionButton_Clicked" Margin="10"/>
            <Button x:Name="Option3Button" Text="{Binding Options[2]}" Clicked="OptionButton_Clicked" Margin="10"/>
            <Button x:Name="Option4Button" Text="{Binding Options[3]}" Clicked="OptionButton_Clicked" Margin="10"/>
        </StackLayout>
    </StackLayout>


</ContentPage>
